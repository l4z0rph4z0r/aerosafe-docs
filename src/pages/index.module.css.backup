/**
 * CSS files with the .module.css suffix will be treated as CSS modules
 * and scoped locally.
 */

.heroBanner {
  padding: 4rem 0;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.aeroSafeHero {
  background: linear-gradient(135deg, #2563eb 0%, #16a34a 100%);
  color: white;
  padding: 6rem 2rem;
}

.heroTitle {
  font-size: 3.5rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  color: white;
}

.heroSubtitle {
  font-size: 1.5rem;
  margin-bottom: 2.5rem;
  color: rgba(255, 255, 255, 0.9);
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.buttons {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.buttonSecondary {
  background-color: transparent !important;
  border-color: white !important;
  color: white !important;
}

.buttonSecondary:hover {
  background-color: rgba(255, 255, 255, 0.1) !important;
}

/* Quick Links Section */
.quickLinks {
  padding: 4rem 2rem;
  background: var(--ifm-background-color);
}

.quickLinkCard {
  display: block;
  padding: 2rem 1.5rem;
  border: 1px solid var(--ifm-color-emphasis-200);
  border-radius: 12px;
  text-decoration: none !important;
  color: inherit !important;
  transition: all 0.3s ease;
  height: 100%;
  background: var(--ifm-card-background-color);
}

.quickLinkCard:hover {
  transform: translateY(-4px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  border-color: var(--ifm-color-primary);
}

.quickLinkIcon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.quickLinkCard h3 {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: var(--ifm-color-primary);
}

.quickLinkCard p {
  color: var(--ifm-color-emphasis-600);
  margin: 0;
  line-height: 1.5;
}

/* AeroSafe Footer Section */
.aeroSafeFooter {
  background: var(--ifm-color-emphasis-100);
  padding: 4rem 2rem 2rem;
  margin-top: 3rem;
}

.aeroSafeFooter h3,
.aeroSafeFooter h4 {
  color: var(--ifm-color-primary);
  margin-bottom: 1rem;
}

.aeroSafeFooter ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.aeroSafeFooter li {
  margin-bottom: 0.5rem;
}

.aeroSafeFooter a {
  color: var(--ifm-color-emphasis-700);
  text-decoration: none;
  transition: color 0.2s ease;
}

.aeroSafeFooter a:hover {
  color: var(--ifm-color-primary);
}

/* Responsive Design */
@media screen and (max-width: 996px) {
  .heroBanner {
    padding: 2rem;
  }

  .aeroSafeHero {
    padding: 4rem 1rem;
  }

  .heroTitle {
    font-size: 2.5rem;
  }

  .heroSubtitle {
    font-size: 1.25rem;
  }

  .buttons {
    flex-direction: column;
    gap: 0.75rem;
  }

  .quickLinks {
    padding: 3rem 1rem;
  }

  .quickLinkCard {
    margin-bottom: 1rem;
  }
}

@media screen and (max-width: 768px) {
  .heroTitle {
    font-size: 2rem;
  }

  .heroSubtitle {
    font-size: 1.1rem;
  }

  .aeroSafeFooter {
    padding: 3rem 1rem 2rem;
  }
}
