# AeroSafe Documentation Site Environment Variables
# Copy this file to .env and update the values

# Environment Configuration
NODE_ENV=production
ENVIRONMENT=production

# Site Configuration
DOCUSAURUS_URL=https://docs.aerosafe.it
DOCUSAURUS_BASE_URL=/
SITE_NAME=AeroSafe Documentation
ORGANIZATION_NAME=aerosafe-ist
PROJECT_NAME=aerosafe-docs

# Multi-Environment URLs
PROD_URL=https://docs.aerosafe.it
STAGING_URL=https://staging-docs.aerosafe.it
DEV_URL=http://localhost:3000

# Docker Ports Configuration
PROD_PORT=8080
STAGING_PORT=8081
DEV_PORT=3000

# SSL/TLS Configuration
ACME_EMAIL=admin@aerosafe.it
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# Search Configuration (Algolia DocSearch)
ALGOLIA_APP_ID=YOUR_APP_ID
ALGOLIA_API_KEY=YOUR_API_KEY
ALGOLIA_INDEX_NAME=aerosafe-docs
ALGOLIA_SEARCH_API_KEY=YOUR_SEARCH_ONLY_API_KEY

# Analytics Configuration
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
HOTJAR_ID=XXXXXXX

# Social Media Configuration
TWITTER_SITE=@aerosafe_ist
FACEBOOK_APP_ID=XXXXXXXXXX
LINKEDIN_COMPANY_ID=XXXXXXXX

# GitHub Configuration
GITHUB_OWNER=aerosafe-ist
GITHUB_REPO=aerosafe-docs
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_EDIT_URL=https://github.com/aerosafe-ist/aerosafe-docs/edit/main/

# Vercel Configuration
VERCEL_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VERCEL_ORG_ID=team_xxxxxxxxxxxxxxxxxxxxxxxx
VERCEL_PROJECT_ID=prj_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Database Configuration (if needed for future features)
DATABASE_URL=postgresql://username:password@localhost:5432/aerosafe_docs
REDIS_URL=redis://localhost:6379

# Email Configuration (for contact forms, if implemented)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@aerosafe.it
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@aerosafe.it
TO_EMAIL=info@aerosafe.it

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=aerosafe123
HEALTH_CHECK_URL=/health

# Content Management
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' *.vercel-analytics.com *.algolia.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https:; font-src 'self' data:; connect-src 'self' *.algolia.net *.algolianet.com; frame-src 'self'; object-src 'none';"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# Cache Configuration
CACHE_TTL=86400
STATIC_CACHE_TTL=31536000
API_CACHE_TTL=300

# Internationalization
DEFAULT_LOCALE=it
SUPPORTED_LOCALES=it,en
LOCALE_DETECTION=true

# Admin Authentication (CHANGE THESE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password_here
ADMIN_JWT_SECRET=your_super_secure_jwt_secret_here
ADMIN_TOKEN_EXPIRY=8h

# Security Settings
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION=900000
ADMIN_SESSION_TIMEOUT=28800000

# Backup Configuration (if using automated backups)
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=aerosafe-docs-backups
BACKUP_S3_REGION=eu-west-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Development Configuration
DEV_SERVER_HOST=0.0.0.0
DEV_SERVER_PORT=3000
HOT_RELOAD_ENABLED=true
LIVE_RELOAD_ENABLED=true
CHOKIDAR_USEPOLLING=true
FAST_REFRESH=true

# Nginx Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_KEEPALIVE_TIMEOUT=65
NGINX_CLIENT_MAX_BODY_SIZE=50M

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
ACCESS_LOG_ENABLED=true
ERROR_LOG_ENABLED=true
LOG_RETENTION_DAYS=30

# Security Configuration
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# API Configuration (for future API endpoints)
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000
API_CORS_ORIGIN=https://docs.aerosafe.it,https://www.aerosafe.it

# Feature Flags
FEATURE_SEARCH_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_COMMENTS_ENABLED=false
FEATURE_NEWSLETTER_ENABLED=false
FEATURE_MULTILANG_ENABLED=true

# Third-party Services
CRISP_WEBSITE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
INTERCOM_APP_ID=xxxxxxxx
ZENDESK_SUBDOMAIN=aerosafe

# Performance Configuration
PRELOAD_RESOURCES=true
LAZY_LOAD_IMAGES=true
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true
COMPRESS_ASSETS=true

# PWA Configuration (if implementing PWA features)
PWA_ENABLED=false
PWA_NAME=AeroSafe Documentation
PWA_SHORT_NAME=AeroSafe Docs
PWA_DESCRIPTION=Official documentation for AeroSafe DryFogS nebulizers
PWA_THEME_COLOR=#2563eb
PWA_BACKGROUND_COLOR=#ffffff

# Testing Configuration
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=80
E2E_BASE_URL=http://localhost:3000

# Build Configuration
BUILD_PARALLEL=true
BUILD_CACHE_ENABLED=true
WEBPACK_BUNDLE_ANALYZER=false
SOURCE_MAPS=false