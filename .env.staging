# AeroSafe Documentation Site - STAGING Environment
# TESTING ENVIRONMENT: Use this for testing production-like configurations before deployment

# Environment Configuration
NODE_ENV=production
ENVIRONMENT=staging

# Site Configuration
DOCUSAURUS_URL=https://staging-docs.aerosafe.it
DOCUSAURUS_BASE_URL=/
SITE_NAME=AeroSafe Documentation (Staging)
ORGANIZATION_NAME=aerosafe-ist
PROJECT_NAME=aerosafe-docs

# Multi-Environment URLs
PROD_URL=https://docs.aerosafe.it
STAGING_URL=https://staging-docs.aerosafe.it
DEV_URL=http://localhost:3000

# Docker Ports Configuration
PROD_PORT=8080
STAGING_PORT=8081
DEV_PORT=3000

# SSL/TLS Configuration - STAGING CERTIFICATES
ACME_EMAIL=staging@aerosafe.it
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private
ENABLE_HTTPS=true
FORCE_HTTPS=true

# Search Configuration - STAGING ALGOLIA INDEX
# Use separate staging index to prevent pollution of production search
ALGOLIA_APP_ID=REPLACE_WITH_STAGING_APP_ID
ALGOLIA_API_KEY=REPLACE_WITH_STAGING_API_KEY
ALGOLIA_INDEX_NAME=aerosafe-docs-staging
ALGOLIA_SEARCH_API_KEY=REPLACE_WITH_STAGING_SEARCH_API_KEY

# Analytics Configuration - STAGING/TEST TRACKING
# Use separate staging analytics to isolate test data
GOOGLE_ANALYTICS_ID=REPLACE_WITH_STAGING_GA_ID
GOOGLE_TAG_MANAGER_ID=REPLACE_WITH_STAGING_GTM_ID
HOTJAR_ID=REPLACE_WITH_STAGING_HOTJAR_ID

# Social Media Configuration
TWITTER_SITE=@aerosafe_ist
FACEBOOK_APP_ID=REPLACE_WITH_STAGING_FB_APP_ID
LINKEDIN_COMPANY_ID=REPLACE_WITH_STAGING_LINKEDIN_ID

# GitHub Configuration - STAGING REPOSITORY ACCESS
GITHUB_OWNER=aerosafe-ist
GITHUB_REPO=aerosafe-docs
GITHUB_TOKEN=REPLACE_WITH_STAGING_GITHUB_TOKEN
GITHUB_EDIT_URL=https://github.com/aerosafe-ist/aerosafe-docs/edit/staging/

# Vercel Configuration (staging deployment)
VERCEL_TOKEN=REPLACE_WITH_STAGING_VERCEL_TOKEN
VERCEL_ORG_ID=REPLACE_WITH_STAGING_VERCEL_ORG_ID
VERCEL_PROJECT_ID=REPLACE_WITH_STAGING_VERCEL_PROJECT_ID

# Database Configuration - STAGING DATABASES
DATABASE_URL=REPLACE_WITH_STAGING_DATABASE_URL
REDIS_URL=REPLACE_WITH_STAGING_REDIS_URL

# Email Configuration - STAGING EMAIL TESTING
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=REPLACE_WITH_STAGING_SMTP_USER
SMTP_PASSWORD=REPLACE_WITH_STAGING_SMTP_PASSWORD
FROM_EMAIL=noreply-staging@aerosafe.it
TO_EMAIL=staging-test@aerosafe.it

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=REPLACE_WITH_STAGING_GRAFANA_PASSWORD
HEALTH_CHECK_URL=/health

# Content Security Policy - STAGING (more permissive for testing)
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' *.vercel-analytics.com *.algolia.net *.google-analytics.com *.googletagmanager.com; style-src 'self' 'unsafe-inline' fonts.googleapis.com; img-src 'self' data: blob: https: *.google-analytics.com *.googletagmanager.com; font-src 'self' data: fonts.gstatic.com; connect-src 'self' *.algolia.net *.algolianet.com *.google-analytics.com *.analytics.google.com *.googletagmanager.com; frame-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self';"

# Rate Limiting - STAGING (more lenient for testing)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=2000
RATE_LIMIT_WINDOW_MS=900000

# Cache Configuration - STAGING (shorter TTL for testing)
CACHE_TTL=3600
STATIC_CACHE_TTL=86400
API_CACHE_TTL=60

# Internationalization
DEFAULT_LOCALE=it
SUPPORTED_LOCALES=it,en
LOCALE_DETECTION=true

# Admin Authentication - STAGING CREDENTIALS
# Use different credentials than production for security
ADMIN_USERNAME=REPLACE_WITH_STAGING_USERNAME
ADMIN_PASSWORD_HASH=REPLACE_WITH_STAGING_BCRYPT_HASH
ADMIN_JWT_SECRET=REPLACE_WITH_STAGING_JWT_SECRET
ADMIN_TOKEN_EXPIRY=8h

# Security Settings - STAGING (moderate security for testing)
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION=900000
ADMIN_SESSION_TIMEOUT=21600000
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=86400
HSTS_INCLUDE_SUBDOMAINS=false
HSTS_PRELOAD=false

# Backup Configuration - STAGING S3 BUCKET
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=REPLACE_WITH_STAGING_S3_BUCKET
BACKUP_S3_REGION=eu-west-1
AWS_ACCESS_KEY_ID=REPLACE_WITH_STAGING_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_STAGING_AWS_SECRET_KEY

# Nginx Configuration
NGINX_WORKER_PROCESSES=2
NGINX_WORKER_CONNECTIONS=512
NGINX_KEEPALIVE_TIMEOUT=65
NGINX_CLIENT_MAX_BODY_SIZE=50M

# Logging Configuration - STAGING (more verbose for testing)
LOG_LEVEL=info
LOG_FORMAT=combined
ACCESS_LOG_ENABLED=true
ERROR_LOG_ENABLED=true
LOG_RETENTION_DAYS=30

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000
API_CORS_ORIGIN=https://staging-docs.aerosafe.it,https://staging.aerosafe.it

# Feature Flags - STAGING (all features enabled for testing)
FEATURE_SEARCH_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_COMMENTS_ENABLED=true
FEATURE_NEWSLETTER_ENABLED=true
FEATURE_MULTILANG_ENABLED=true

# Third-party Services - STAGING CREDENTIALS
CRISP_WEBSITE_ID=REPLACE_WITH_STAGING_CRISP_ID
INTERCOM_APP_ID=REPLACE_WITH_STAGING_INTERCOM_ID
ZENDESK_SUBDOMAIN=aerosafe-staging

# Performance Configuration
PRELOAD_RESOURCES=true
LAZY_LOAD_IMAGES=true
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true
COMPRESS_ASSETS=true

# PWA Configuration (testing PWA features)
PWA_ENABLED=false
PWA_NAME=AeroSafe Documentation (Staging)
PWA_SHORT_NAME=AeroSafe Staging
PWA_DESCRIPTION=Staging environment for AeroSafe DryFogS documentation
PWA_THEME_COLOR=#2563eb
PWA_BACKGROUND_COLOR=#ffffff

# Build Configuration - STAGING (with source maps for debugging)
BUILD_PARALLEL=true
BUILD_CACHE_ENABLED=true
WEBPACK_BUNDLE_ANALYZER=false
SOURCE_MAPS=true