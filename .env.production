# AeroSafe Documentation Site - PRODUCTION Environment
# SECURITY NOTICE: This file contains production environment variables.
# ALL placeholder values must be replaced with actual production values before deployment.

# Environment Configuration
NODE_ENV=production
ENVIRONMENT=production

# Site Configuration
DOCUSAURUS_URL=https://docs.aerosafe.it
DOCUSAURUS_BASE_URL=/
SITE_NAME=AeroSafe Documentation
ORGANIZATION_NAME=aerosafe-ist
PROJECT_NAME=aerosafe-docs

# Multi-Environment URLs
PROD_URL=https://docs.aerosafe.it
STAGING_URL=https://staging-docs.aerosafe.it
DEV_URL=http://localhost:3000

# Docker Ports Configuration
PROD_PORT=8080
STAGING_PORT=8081
DEV_PORT=3000

# SSL/TLS Configuration - REQUIRED FOR PRODUCTION
ACME_EMAIL=admin@aerosafe.it
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private
ENABLE_HTTPS=true
FORCE_HTTPS=true

# Search Configuration - REPLACE WITH ACTUAL ALGOLIA CREDENTIALS
# Contact admin@aerosafe.it for production search credentials
ALGOLIA_APP_ID=REPLACE_WITH_PRODUCTION_APP_ID
ALGOLIA_API_KEY=REPLACE_WITH_PRODUCTION_API_KEY
ALGOLIA_INDEX_NAME=aerosafe-docs-production
ALGOLIA_SEARCH_API_KEY=REPLACE_WITH_SEARCH_ONLY_API_KEY

# Analytics Configuration - REPLACE WITH ACTUAL TRACKING IDS
# Contact admin@aerosafe.it for production analytics credentials
GOOGLE_ANALYTICS_ID=REPLACE_WITH_PRODUCTION_GA_ID
GOOGLE_TAG_MANAGER_ID=REPLACE_WITH_PRODUCTION_GTM_ID
HOTJAR_ID=REPLACE_WITH_PRODUCTION_HOTJAR_ID

# Social Media Configuration
TWITTER_SITE=@aerosafe_ist
FACEBOOK_APP_ID=REPLACE_WITH_PRODUCTION_FB_APP_ID
LINKEDIN_COMPANY_ID=REPLACE_WITH_PRODUCTION_LINKEDIN_ID

# GitHub Configuration - SECURE REPOSITORY ACCESS
GITHUB_OWNER=aerosafe-ist
GITHUB_REPO=aerosafe-docs
GITHUB_TOKEN=REPLACE_WITH_PRODUCTION_GITHUB_TOKEN
GITHUB_EDIT_URL=https://github.com/aerosafe-ist/aerosafe-docs/edit/main/

# Vercel Configuration (if using Vercel for deployment)
VERCEL_TOKEN=REPLACE_WITH_PRODUCTION_VERCEL_TOKEN
VERCEL_ORG_ID=REPLACE_WITH_PRODUCTION_VERCEL_ORG_ID
VERCEL_PROJECT_ID=REPLACE_WITH_PRODUCTION_VERCEL_PROJECT_ID

# Database Configuration (for future features if implemented)
DATABASE_URL=REPLACE_WITH_PRODUCTION_DATABASE_URL
REDIS_URL=REPLACE_WITH_PRODUCTION_REDIS_URL

# Email Configuration (for contact forms, if implemented)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=REPLACE_WITH_PRODUCTION_SMTP_USER
SMTP_PASSWORD=REPLACE_WITH_PRODUCTION_SMTP_PASSWORD
FROM_EMAIL=noreply@aerosafe.it
TO_EMAIL=info@aerosafe.it

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=REPLACE_WITH_SECURE_GRAFANA_PASSWORD
HEALTH_CHECK_URL=/health

# Content Security Policy - PRODUCTION HARDENED
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' *.vercel-analytics.com *.algolia.net *.google-analytics.com *.googletagmanager.com; style-src 'self' 'unsafe-inline' fonts.googleapis.com; img-src 'self' data: blob: https: *.google-analytics.com *.googletagmanager.com; font-src 'self' data: fonts.gstatic.com; connect-src 'self' *.algolia.net *.algolianet.com *.google-analytics.com *.analytics.google.com *.googletagmanager.com; frame-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self';"

# Rate Limiting - PRODUCTION SETTINGS
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# Cache Configuration - PRODUCTION OPTIMIZED
CACHE_TTL=86400
STATIC_CACHE_TTL=31536000
API_CACHE_TTL=300

# Internationalization
DEFAULT_LOCALE=it
SUPPORTED_LOCALES=it,en
LOCALE_DETECTION=true

# Admin Authentication - CRITICAL: CHANGE THESE IN PRODUCTION!
# Generate secure password hash: npx bcrypt-cli YOUR_SECURE_PASSWORD 12
# Generate secure JWT secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
ADMIN_USERNAME=REPLACE_WITH_SECURE_USERNAME
ADMIN_PASSWORD_HASH=REPLACE_WITH_BCRYPT_HASHED_PASSWORD
ADMIN_JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_64_CHARS_MIN
ADMIN_TOKEN_EXPIRY=8h

# Security Settings - PRODUCTION HARDENED
ADMIN_MAX_LOGIN_ATTEMPTS=3
ADMIN_LOCKOUT_DURATION=1800000
ADMIN_SESSION_TIMEOUT=14400000
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Backup Configuration (if using automated backups)
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=REPLACE_WITH_PRODUCTION_S3_BUCKET
BACKUP_S3_REGION=eu-west-1
AWS_ACCESS_KEY_ID=REPLACE_WITH_PRODUCTION_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_PRODUCTION_AWS_SECRET_KEY

# Nginx Configuration - PRODUCTION OPTIMIZED
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_KEEPALIVE_TIMEOUT=65
NGINX_CLIENT_MAX_BODY_SIZE=50M

# Logging Configuration - PRODUCTION SETTINGS
LOG_LEVEL=error
LOG_FORMAT=combined
ACCESS_LOG_ENABLED=true
ERROR_LOG_ENABLED=true
LOG_RETENTION_DAYS=90

# API Configuration (for future API endpoints)
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000
API_CORS_ORIGIN=https://docs.aerosafe.it,https://www.aerosafe.it

# Feature Flags - PRODUCTION ENABLED
FEATURE_SEARCH_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_COMMENTS_ENABLED=false
FEATURE_NEWSLETTER_ENABLED=false
FEATURE_MULTILANG_ENABLED=true

# Third-party Services - REPLACE WITH PRODUCTION CREDENTIALS
CRISP_WEBSITE_ID=REPLACE_WITH_PRODUCTION_CRISP_ID
INTERCOM_APP_ID=REPLACE_WITH_PRODUCTION_INTERCOM_ID
ZENDESK_SUBDOMAIN=aerosafe

# Performance Configuration - PRODUCTION OPTIMIZED
PRELOAD_RESOURCES=true
LAZY_LOAD_IMAGES=true
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true
COMPRESS_ASSETS=true

# PWA Configuration (if implementing PWA features)
PWA_ENABLED=false
PWA_NAME=AeroSafe Documentation
PWA_SHORT_NAME=AeroSafe Docs
PWA_DESCRIPTION=Official documentation for AeroSafe DryFogS nebulizers
PWA_THEME_COLOR=#2563eb
PWA_BACKGROUND_COLOR=#ffffff

# Build Configuration - PRODUCTION OPTIMIZED
BUILD_PARALLEL=true
BUILD_CACHE_ENABLED=true
WEBPACK_BUNDLE_ANALYZER=false
SOURCE_MAPS=false